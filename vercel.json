{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/next" },
    { "src": "api/**/*.php", "use": "vercel-php@0.5.1" }
  ],
  "redirects": [
    {
      "source": "/form-submitted",
      "destination": "/thanks",
      "statusCode": 302
    }
  ],
  "crons": [
    {
      "path": "/api/weekly-report",
      "schedule": "0 10 * * 1"
    }
  ],
  "routes": [
    { "src": "/api/(.*\\.php)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "regions": ["syd1"]
}
